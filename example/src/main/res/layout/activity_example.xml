<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E21B5A"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <org.fabiomsr.moneytextview.MoneyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:amount="1256.56"
        app:baseTextColor="#FBFFE3"
        app:baseTextSize="54sp"
        app:decimalDigitsTextSize="30sp"
        app:decimalMargin="6dp"
        app:fontFamily="sans-serif-medium"
        app:includeDecimalSeparator="false"
        app:symbol="$"
        app:symbolGravity="start|top"
        app:symbolMargin="6dp"
        app:symbolTextSize="30sp" />

    <org.fabiomsr.moneytextview.MoneyTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:amount="1256.56"
        app:baseTextColor="#FBFFE3"
        app:baseTextSize="54sp"
        app:decimalDigitsTextSize="30sp"
        app:decimalGravity="bottom"
        app:decimalMargin="6dp"
        app:decimalSeparator=","
        app:symbol="¥"
        app:symbolGravity="start|bottom"
        app:symbolTextSize="30sp" />

    <org.fabiomsr.moneytextview.MoneyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        app:amount="1256.56"
        app:baseTextColor="#FBFFE3"
        app:baseTextSize="54sp"
        app:decimalDigitsTextSize="30sp"
        app:decimalGravity="top"
        app:decimalSeparator="'"
        app:symbol="€"
        app:symbolGravity="end|top"
        app:symbolTextSize="30sp" />

</RelativeLayout>
